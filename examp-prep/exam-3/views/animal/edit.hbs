<!-- Edit Page (Only for logged-in users) -->
<section id="create">
    <div class="form">
        <h2>Edit item</h2>
        <form class="create-form" method="post">
            <input type="text" name="name" value="{{name}}" id="name" placeholder="Name" value="Show" />
            <input type="text" name="years" value="{{years}}" id="years" placeholder="Years" value="1" />
            <input type="text" name="kind" value="{{kind}}" id="kind" placeholder="Kind" value="Lion" />
            <input type="text" name="image" value="{{image}}" id="animal-img" placeholder="Image url" value="" />
            <input type="text" name="need" value="{{need}}" id="needs-of" placeholder="Needs of" value="Medicine" />
            <input type="text" name="location" value="{{location}}" id="location" placeholder="Location"
                value="San Diego Zoo" />
            <textarea id="description" placeholder="Description..." name="description">{{description}}</textarea>

            <button type="submit">Edit</button>
        </form>
    </div>
</section>