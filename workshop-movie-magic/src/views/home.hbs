<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">
        {{#each movies}}
            <div class="flip flip-vertical">
                <div class="front">
                    <img src="{{image}}" alt="{{title}}">
                </div>
                <div class="back">
                    <h1>{{title}}</h1>
                    <h2>Genre: {{genre}}</h2>
                    <p>Description: {{description}}</p>
                    <a href="#" class="details">Details</a>
                </div>
            </div>
        {{/each}}
        
    </div>
</section>